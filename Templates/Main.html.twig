{% extends "Layout.html.twig" %}

{% set PROFILE_ = IMG_ ~ "Profile.png" %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href={{ CSS_ ~ 'Main.css' }}>
{% endblock %}

{% block content %}

<main class="d-flex">
    <section id="main__nav" class="h-100 d-flex flex-column justify-content-center align-items-center">
        <div id="main__nav__header" class="header d-flex align-items-center">
            <img src={{ LOGO_ }} class="h-75 rounded-circle" alt="Profile">
            <h1 class="fs-5 fw-semibold lh-base m-0 ms-2">Html</h1>
        </div>
        <hr class="w-100 m-0">
        <div id="main__nav__body" class="body d-flex flex-column justify-content-evenly">
            <div id="main__nav__body__profile" class="w-100 d-flex align-items-center">
                <img src={{ PROFILE_ }} class="h-75 rounded-circle" alt="Profile">
                <p class="fs-6 fw-semibold lh-base m-0 ms-2">{{ FULLNAME_ }}</p>
            </div>
            <hr class="m-0">
            <div id="main__nav__body__btns">
                <ul class="home__list p-0">
                    <li id="home__mvc" class="w-100 d-flex btn rounded-0 mt-2">
                        <a href="{{ URL_ }}" class="h-100 w-100 d-flex align-items-center home__items">
                            <span class="material-symbols-outlined">library_books</span>
                            <p class="fs-5 fw-semibold m-0 ms-2">MVC</p>
                        </a>
                    </li>
                    <li id="home__solid" class="w-100 d-flex btn rounded-0 mt-2">
                        <a href="{{ URL_ ~ 'solid' }}" class="h-100 w-100 d-flex align-items-center home__items">
                            <span class="material-symbols-outlined fs-3 fw-normal">developer_mode_tv</span>
                            <p class="fs-5 fw-semibold m-0 ms-2">Solid</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </section>
    <section id="main__content" class="h-100 d-flex justify-content-center align-items-center">
        <div id="main__content__body" class="body">

            {% block main %}

            {# your content here #}
        
            {% endblock %}

        </div>
    </section>
</main>

{% endblock %}
