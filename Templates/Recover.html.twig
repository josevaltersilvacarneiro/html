{% extends "Logout.html.twig" %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href={{ CSS_ ~ 'Recover.css' }}>
{% endblock %}

{% block body %}

    <form action="{% block form_action URL_ ~ 'recover/process' %}" method="POST" id="form__recover" class="h-100 d-flex flex-column">

        {% block body_field %}
            <label for="form__recover__email" class="d-flex align-items-center">Email</label>
            <input type="email" name="email" id="form__recover__email" class="form__field" placeholder="example@jose.net" required autofocus>
        {% endblock %}
    
        <input type="submit" value="Recover" class="btn btn-primary border border-0 text-center">
    </form>

{% endblock %}
