{% set REGISTER_	= URL_ ~ 'register' %}

<main class="d-flex justify-content-center align-items-center">
	<div id="LoginMaindiv0" class="rounded-4">
		<div id="LoginMaindiv0div0" class="d-flex justify-content-center align-items-center"> <!-- CENTRALIZING -->
			<img src="{{ LOGO_ }}"
				alt="greater-than and less-than signs with a vertical bar inside"
				title="Web Development" class="rounded-circle" id="logo">
		</div>
		<div id="LoginMaindiv0div1" class="d-flex justify-content-center">
			<form id="LoginMaindiv0div1form0" class="d-flex justify-content-between align-items-center flex-column Form">
				<!-- USER ENTRY -->
				<div id="LoginMaindiv0div1form0div0" class="LoginMainFormdivfield"> <!-- email -->

					<label for='LoginMaindiv0div1form0div0email' class="d-flex align-items-center">Email</label>

					<input
						type=email name="email" id='LoginMainEmail'
						placeholder="example@jose.net" required autofocus>
					</input>
				</div>
				<div id="LoginMaindiv0div1form0div1" class="LoginMainFormdivfield"> <!-- password -->

					<label for='LoginMaindiv0div1dorm0div1password' class="d-flex align-items-center">Password</label>

					<input type=password name="password" id='LoginMainPassword'
						placeholder="TheLoveisBeaut1ful" required autocomplete=off>
					</input>
				</div>
				<div class="d-flex justify-content-between align-items-center"> <!-- buttons -->
					<input type=button value="Recover" class="btn btn-primary border border-0 text-center LoginClick"
						id='LoginMainRecover'>

					</input>
					<input type=button value="Continue" class="btn btn-primary border border-0 text-center LoginClick"
						id='LoginMainControl'>

					</input>
				</div>
			</form>
		</div>
	</div>
	<a href="{{ REGISTER_ }}"><p id="registerUser" class="btn btn-primary border border-0 LoginClick">Register</p></a>
</main>
