{% extends "Logout.html.twig" %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href={{ CSS_ ~ 'Sign.css' }}>
{% endblock %}

{% block body %}
    <div id="body__sign" class="w-100 d-flex flex-column align-items-center">
        <h3>Get started</h3>
        <div id="body__sign__btns" class="w-100 d-flex justify-content-between">
            <a href="{{ URL_ ~ 'login'}}" class="d-flex justify-content-center align-items-center btn btn-primary border border-0 text-center">Sign in</a>
            <a href="{{ URL_ ~ 'register' }}" class="d-flex justify-content-center align-items-center btn btn-primary border border-0 text-center">Sign up</a>
        </div>
    </div>
{% endblock %}
