{% extends "Logout.html.twig" %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href={{ CSS_ ~ 'Credential.css' }}>
{% endblock %}

{% block body %}

<form action="{% block form_action FORM_ACTION_ %}" method="POST" id="form__center__body__element" class="d-flex justify-content-evenly align-items-center flex-column">
{% block form %}
    <div class="form__field w-100">
        <label for="form__center__body__email" class="h-25 d-flex align-items-center">Email</label>
        <input type="email" id="form__center__body__email" name="email" class="w-100 h-75 form__field__element" placeholder="example@jose.net" required autofocus></input>
    </div>
    <div class="form__field w-100">
        <label for="form__center__body__password" class="h-25 d-flex align-items-center">Password</label>
        <input type="password" id="form__center__body__password" name="password" class="w-100 h-75 form__field__element" placeholder="TheLoveisBeaut1ful" required autocomplete=off></input>
    </div>
    <div class="form__field w-100 d-flex align-items-center">
        <input type="submit" id="form__center__body__submit" class="w-100 h-75 btn btn-primary border border-0 text-center" value="Enter">
    </div>
{% endblock %}
</form>

<div id="form__center__body__recover" class="d-flex justify-content-center align-items-center">
    <a href="{% block link_below URL_ ~ 'recover' %}">{% block text_below "I forgot my password" %}</a>
</div>

{% endblock %}
