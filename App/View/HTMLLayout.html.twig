{#
 * DOCUMENTATION
 * 
 * What is available for use and can be used:
 * 
 * TITLE_			- PAGE'S TITLE
 * DESCRIPTION_		- PAGE'S DESCRIPTION, i.e. a brief overview
 * KEYWORDS_		- PAGE'S KEYWORDS
 * ROBOTS_			- PAGE'S ROBOTS, i.e. the indexing level for the page
 * DIR_				- PAGE'S DIRECTORY, i.e. the dir according to the served page (for example, Login/)
 * 
 * HEADER_			- PATH TO THE FILE CONTAINING THE PAGE'S HEADER
 * MAIN_			- PATH TO THE FILE CONTAINING THE PAGE'S MAIN BODY
 * FOOTER_			- PATH TO THE FILE CONTAINING THE PAGE'S FOOTNOTE
 * 
 * In addition, all global variables are available here.
 * 
 * @author		José V S Carneiro
 * @version		0.6
 * @copyright	Copyright (C) 2023, José V S Carneiro
 * @license		GPLv3
#}

{% set CURRENT_YEAR_	= "now"|date("Y") %}
{% set LOGO_			= IMG_ ~ 'Code.png' %}

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset="UTF-8">

		<title>{{ TITLE_ }}</title>

		<meta name=description content="{{ DESCRIPTION_ }}">
		<meta name=keywords content="{{ KEYWORDS_ }}">
		<meta name=author content="{{ AUTHOR_ }}">
		<meta name=copyright content="Copyright (C) {{ CURRENT_YEAR_ ~ ", " ~ AUTHOR_ }}">
		<meta name=generator content="Vim">
		<meta name=rating content="14 years">
		<meta http-equiv=cache-control name=no-cache>
		<meta name=robots content="{{ ROBOTS_ }}">
		<meta name=viewport content="width=device-width, initial-scale=1.0, maximum-scale=1">

		<base href="{{ URL_ }}">

		<!-- google web fonts -->

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap">

		<!-- BEGIN google icons -->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"/>
		<!-- ENDOF google icons -->

		<!-- BEGIN bootstrap -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
		<!-- ENDOF bootstrap -->
		<link rel=stylesheet href={{ CSS_ ~ 'Style.css' }}>
		<link rel=stylesheet href={{ CSS_ ~ DIR_ ~ 'Style-' ~ VERSION_ ~ '.css' }}>

		<noscript>Your browser doens't support Javascript.</noscript>
	</head>
	<body>
		{% if HEADER_ is defined %}
			{% include HEADER_ %}
		{% endif %}

		{% if MAIN_ is defined %}
			{% include MAIN_ %}
		{% endif %}

		{% if FOOTER_ is defined %}
			{% include FOOTER_ %}
		{% endif %}
		<div id="liveAlertPlaceholder"></div>
	</body>
	<!-- BEGIN bootstrap -->
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
	<!-- ENDOF bootstrap -->
	<script type="module" src="{{ JS_ ~ 'Public/app.js' }}"></script>
</html>
